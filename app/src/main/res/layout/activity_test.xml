<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.alpha.intell.factory.check.activitys.TestActivity">

    <RelativeLayout
        android:id="@+id/test_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_panel_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/top_panel">
        <Button
            android:id="@+id/test_back"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="31dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/test_title"
            android:textSize="@dimen/text_a"
            android:textColor="@color/text_a" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efeff0"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/test_list_panel"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:dividerHeight="1dp"
            android:divider="@color/color03"
            android:background="@drawable/main_bottom_left_background"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">
        </ListView>
        <FrameLayout
            android:id="@+id/fragments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/main_bottom_right_background" />

    </LinearLayout>

</LinearLayout>
