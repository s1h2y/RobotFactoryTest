<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.alpha.intell.factory.check.fragments.HandFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="276dp"
        android:layout_height="331dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/body" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/check_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="81dp"
            android:layout_marginRight="63dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/Widget.MyCheckBox.TextView"
                android:text="@string/left_hand_fail" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_left_layout"
            android:layout_alignRight="@id/check_left_layout"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/Widget.MyCheckBox.TextView"
                android:text="@string/right_hand_fail" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="300dp"
            android:layout_marginBottom="60dp"
            style="@style/Widget.TextView.StyleC"
            android:text="@string/hand_detail" />

    </RelativeLayout>

</FrameLayout>
