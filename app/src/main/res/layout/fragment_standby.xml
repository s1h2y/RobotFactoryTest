<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.alpha.intell.factory.check.fragments.StandbyFragment">

<ImageView
    android:id="@+id/buttons"
    android:layout_width="@dimen/buttons_width"
    android:layout_height="@dimen/buttons_height"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="47dp"
    android:layout_marginTop="33dp"
    android:background="@drawable/standby_button"/>
    <LinearLayout
        android:id="@+id/check_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttons"
        android:layout_alignParentTop="true"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MyCheckBox.TextView"
            android:text="@string/standby_fail"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/buttons"
        android:layout_alignLeft="@id/check_layout"
        style="@style/Widget.TextView.StyleB"
        android:text="@string/touch_power"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignLeft="@id/buttons"
        style="@style/Widget.TextView.StyleC"
        android:text="@string/standby_detail"/>
</RelativeLayout>
