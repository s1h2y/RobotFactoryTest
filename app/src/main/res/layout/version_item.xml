<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/version_list_item_height"
    android:gravity="bottom">

    <TextView
        android:id="@+id/version_item_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_b"
        android:textSize="@dimen/text_b"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/version_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_c"
        android:textSize="@dimen/text_c"
        android:layout_alignParentRight="true" />
</RelativeLayout>