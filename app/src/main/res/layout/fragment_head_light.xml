<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alpha.smart.factorytest.fragments.HeadLightFragment">

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="32dp"
        android:text="@string/head_light_detail"/>

    <GridLayout
        android:id="@+id/check_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/detail"
        android:layout_below="@id/detail"
        android:layout_marginTop="27dp"
        android:columnCount="4">

        <CheckBox android:id="@+id/origin" />

        <TextView
            android:layout_marginLeft="10dp"
            android:text="@string/origin_fail" />

        <CheckBox
            android:id="@+id/red"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:text="@string/red_fail" />

        <CheckBox android:id="@+id/green" />

        <TextView
            android:layout_marginLeft="10dp"
            android:text="@string/green_fail" />
    </GridLayout>

    <Button
        android:id="@+id/button"
        android:layout_below="@id/check_layout"
        android:layout_marginTop="33dp"
        style="@style/Widget.Button.StartTestLong"/>
</RelativeLayout>
